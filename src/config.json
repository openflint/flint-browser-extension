{
    "config_version": "2",
    "name": "FlintAssistant",
    "author": "None",
    "version": "0.1",
    "platform_version": "v1.4",
    "description": "Assistant for OpenFlint",
    "modules": {
        "message": true,
        "logging": {
            "level": "DEBUG"
        },
        "contact": true,
        "file": true,
        "is": true,
        "media": true,
        "prefs": true,
        "request": {
            "permissions": ["http://*/*", "https://*/*"]
        },
        "tools": true,
        "reload": true,
        "activations": [
            {
                "patterns": ["http://*/*", "https://*/*"],
                "scripts": ["js/content_scripts.js"],
                "styles": [],
                "run_at": "start",
                "all_frames": false
            }
        ],
        "background": {
            "files": [
                "js/background.js"
            ]
        }
    }
}
